---
import BaseLayout from '../layouts/BaseLayout.astro';
import data from '../../data.json';
import { createSlug, generateTitle, generatePrompt } from '../utils/helpers';

const title = "Smart Prompt Guide - Find Your Perfect AI Prompt";
const description = "Smart Prompt Guide: Generate professional AI images with optimized prompts. Thousands of combinations of professions, styles, and actions to create high-quality photos.";

// Calculate total pages dynamically
const totalPages = data.profesiones.length * data.estilos.length * data.acciones.length;

// Generate ALL pages for search functionality
const allPages = [];
data.profesiones.forEach((profesion) => {
  data.estilos.forEach((estilo) => {
    data.acciones.forEach((accion) => {
      allPages.push({
        slug: `${createSlug(profesion)}-${createSlug(estilo)}-${createSlug(accion)}`,
        title: generateTitle(profesion, estilo, accion),
        prompt_ejemplo: generatePrompt(profesion, estilo, accion),
        profesion,
        estilo,
        accion
      });
    });
  });
});

// Generate sample pages for homepage display (first 9)
const samplePages = allPages.slice(0, 9);
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <main class="max-w-6xl mx-auto px-6 py-16 sm:py-24">
      <!-- Hero Section -->
      <div class="text-center mb-12">
        <h1 class="text-5xl sm:text-6xl font-bold text-gray-900 mb-4 bg-gradient-to-r from-gray-900 via-blue-800 to-gray-900 bg-clip-text text-transparent">
          Smart Prompt Guide
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-6">
          Optimized professional prompts to create high-quality images. 
          Explore thousands of combinations of professions, styles, and actions.
        </p>
        <div class="flex flex-wrap justify-center gap-3 text-sm mb-8">
          <span class="px-4 py-2 bg-blue-100 text-blue-800 rounded-full font-medium">
            {data.profesiones.length} Professions
          </span>
          <span class="px-4 py-2 bg-purple-100 text-purple-800 rounded-full font-medium">
            {data.estilos.length} Styles
          </span>
          <span class="px-4 py-2 bg-green-100 text-green-800 rounded-full font-medium">
            {data.acciones.length} Actions
          </span>
          <span class="px-4 py-2 bg-orange-100 text-orange-800 rounded-full font-medium">
            {totalPages}+ Prompts
          </span>
        </div>
      </div>

      <!-- Search Section - Prominent -->
      <div class="mb-12">
        <div class="max-w-3xl mx-auto">
          <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6 sm:p-8">
            <div class="text-center mb-6">
              <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">
                Find Your Perfect Prompt
              </h2>
              <p class="text-gray-600">
                Search through {totalPages}+ optimized AI image prompts
              </p>
            </div>
            <div class="relative">
              <input
                type="text"
                id="searchInput"
                placeholder="Try: 'doctor cyberpunk working', 'architect modern', 'photorealistic'..."
                class="w-full px-6 py-4 pl-14 pr-14 text-lg text-gray-900 bg-gray-50 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-white transition-all outline-none shadow-sm"
              />
              <svg class="absolute left-5 top-1/2 transform -translate-y-1/2 w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              <button
                id="clearSearch"
                class="absolute right-5 top-1/2 transform -translate-y-1/2 hidden text-gray-400 hover:text-gray-600 transition-colors p-1 rounded-full hover:bg-gray-100"
                style="display: none;"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
            <p id="resultsCount" class="text-sm text-gray-500 mt-4 text-center font-medium"></p>
          </div>
        </div>
      </div>

        <!-- Prompts Grid -->
        <div id="promptsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {allPages.map((page) => (
            <a 
              href={`/${page.slug}`}
              class="prompt-card block p-6 bg-white rounded-xl shadow-sm border border-gray-200 hover:shadow-lg hover:border-blue-300 transition-all duration-200 group"
              data-profesion={page.profesion.toLowerCase()}
              data-estilo={page.estilo.toLowerCase()}
              data-accion={page.accion.toLowerCase()}
              data-title={page.title.toLowerCase()}
              data-prompt={page.prompt_ejemplo.toLowerCase()}
            >
              <h3 class="font-semibold text-gray-900 mb-2 line-clamp-2 group-hover:text-blue-600 transition-colors">
                {page.title.split('|')[0].trim()}
              </h3>
              <p class="text-sm text-gray-600 line-clamp-2 mb-3">
                {page.prompt_ejemplo}
              </p>
              <div class="flex flex-wrap gap-2">
                <span class="px-2 py-1 bg-blue-50 text-blue-700 text-xs rounded-md capitalize font-medium">
                  {page.profesion}
                </span>
                <span class="px-2 py-1 bg-purple-50 text-purple-700 text-xs rounded-md capitalize font-medium">
                  {page.estilo}
                </span>
                <span class="px-2 py-1 bg-green-50 text-green-700 text-xs rounded-md capitalize font-medium">
                  {page.accion}
                </span>
              </div>
            </a>
          ))}
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="hidden text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900">No prompts found</h3>
          <p class="mt-2 text-sm text-gray-500">Try adjusting your search terms</p>
        </div>
      </div>

      <script>
        const searchInput = document.getElementById('searchInput');
        const clearSearch = document.getElementById('clearSearch');
        const promptsGrid = document.getElementById('promptsGrid');
        const emptyState = document.getElementById('emptyState');
        const resultsCount = document.getElementById('resultsCount');
        const promptCards = document.querySelectorAll('.prompt-card');

        function filterPrompts() {
          const searchTerm = searchInput.value.toLowerCase().trim();
          let visibleCount = 0;

          if (searchTerm === '') {
            // Show all prompts
            promptCards.forEach((card) => {
              card.style.display = 'block';
              visibleCount++;
            });
            clearSearch.style.display = 'none';
            emptyState.classList.add('hidden');
            resultsCount.textContent = '';
          } else {
            // Filter prompts
            promptCards.forEach((card) => {
              const profesion = card.getAttribute('data-profesion') || '';
              const estilo = card.getAttribute('data-estilo') || '';
              const accion = card.getAttribute('data-accion') || '';
              const title = card.getAttribute('data-title') || '';
              const prompt = card.getAttribute('data-prompt') || '';

              const matches = 
                profesion.includes(searchTerm) ||
                estilo.includes(searchTerm) ||
                accion.includes(searchTerm) ||
                title.includes(searchTerm) ||
                prompt.includes(searchTerm);

              if (matches) {
                card.style.display = 'block';
                visibleCount++;
              } else {
                card.style.display = 'none';
              }
            });

            clearSearch.style.display = 'block';
            
            if (visibleCount === 0) {
              promptsGrid.classList.add('hidden');
              emptyState.classList.remove('hidden');
              resultsCount.textContent = '';
            } else {
              promptsGrid.classList.remove('hidden');
              emptyState.classList.add('hidden');
              resultsCount.textContent = `Found ${visibleCount} prompt${visibleCount !== 1 ? 's' : ''} matching your search`;
            }
          }
        }

        searchInput.addEventListener('input', filterPrompts);

        clearSearch.addEventListener('click', () => {
          searchInput.value = '';
          filterPrompts();
          searchInput.focus();
        });

        // Handle Enter key to prevent form submission
        searchInput.addEventListener('keydown', (e) => {
          if (e.key === 'Enter') {
            e.preventDefault();
          }
        });
      </script>

      <!-- Quick Categories Section -->
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Browse by Category</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Professions -->
          <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-6 rounded-xl border border-blue-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Professions
            </h3>
            <div class="flex flex-wrap gap-2">
              {data.profesiones.slice(0, 8).map((profesion) => (
                <span class="px-3 py-1 bg-white text-gray-700 rounded-md text-sm font-medium shadow-sm">
                  {profesion}
                </span>
              ))}
              {data.profesiones.length > 8 && (
                <span class="px-3 py-1 bg-white text-gray-500 rounded-md text-sm font-medium shadow-sm">
                  +{data.profesiones.length - 8} more
                </span>
              )}
            </div>
          </div>

          <!-- Styles -->
          <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-6 rounded-xl border border-purple-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
              </svg>
              Styles
            </h3>
            <div class="flex flex-wrap gap-2">
              {data.estilos.slice(0, 8).map((estilo) => (
                <span class="px-3 py-1 bg-white text-gray-700 rounded-md text-sm font-medium shadow-sm">
                  {estilo}
                </span>
              ))}
              {data.estilos.length > 8 && (
                <span class="px-3 py-1 bg-white text-gray-500 rounded-md text-sm font-medium shadow-sm">
                  +{data.estilos.length - 8} more
                </span>
              )}
            </div>
          </div>

          <!-- Actions -->
          <div class="bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-xl border border-green-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Actions
            </h3>
            <div class="flex flex-wrap gap-2">
              {data.acciones.slice(0, 8).map((accion) => (
                <span class="px-3 py-1 bg-white text-gray-700 rounded-md text-sm font-medium shadow-sm">
                  {accion}
                </span>
              ))}
              {data.acciones.length > 8 && (
                <span class="px-3 py-1 bg-white text-gray-500 rounded-md text-sm font-medium shadow-sm">
                  +{data.acciones.length - 8} more
                </span>
              )}
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</BaseLayout>
